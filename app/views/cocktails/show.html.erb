<div class="container">
  <h1><%= @cocktail.name %></h1>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> - <%= dose.ingredient.name %></li>
    <%= link_to "destroy", dose_path(dose), method: :delete%>
    <% end %>
  </ul>
  <%= link_to "add dose", new_cocktail_dose_path(@cocktail) %> |
  <%= link_to "Home", cocktails_path %>
</div>
